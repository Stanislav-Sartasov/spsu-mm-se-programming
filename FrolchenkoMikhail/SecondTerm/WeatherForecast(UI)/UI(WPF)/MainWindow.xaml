<Window x:Class="UI_WPF_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_WPF_"
        mc:Ignorable="d"
        Title="MainWindow" Height="309" Width="535">
    <Grid Margin="0,-12,0,0">
        <CheckBox x:Name="StormglassIoCheckBox" Content="Stormglass.io" Margin="21,0,0,35" FontSize="14" Height="26" VerticalAlignment="Bottom" Checked="StormglassIoCheckBox_Checked" Unchecked="StormglassIoCheckBox_Unchecked" HorizontalAlignment="Left" Width="120"/>
        <CheckBox x:Name="TomorrowIoCheckBox" Content="Tomorrow.io" Margin="21,0,0,7" FontSize="14" Height="21" VerticalAlignment="Bottom" Checked="TomorrowIoCheckBox_Checked" Unchecked="TomorrowIoCheckBox_Unchecked" HorizontalAlignment="Left" Width="120"/>
        <Button Content="Refresh" Margin="0,0,23,20" RenderTransformOrigin="0.98,1.941" FontSize="14" Height="41" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="91" Click="Button_Click"/>
        <TextBlock x:Name="WarningText" Margin="81,28,69,0" Text="Warning: stormglass.io has a limit of 10 requests per day" TextWrapping="Wrap" FontSize="14" TextAlignment="Center" Height="44" VerticalAlignment="Top"/>

    </Grid>
</Window>
